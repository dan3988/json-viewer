{
	"compilerOptions": {
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"isolatedModules": true,
		"outDir": "lib",
		"stripInternal": true,
		"allowJs": true,
	}
}
