{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "browser",
			"type": "pickString",
			"description": "The browser to build for",
			"options": [
				{
					"value": "chrome"
				},
				{
					"value": "firefox"
				},
				{
					"value": "tests"
				}
			]
		}
	],	
	"tasks": [
		{
			"label": "watch",
			"type": "npm",
			"script": "watch-${input:browser}",
			"group": "build"
		},
		{
			"label": "build",
			"type": "npm",
			"script": "build-${input:browser}",
			"group": "build"
		},
		{
			"label": "File Server",
			"type": "npm",
			"script": "file-server",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}