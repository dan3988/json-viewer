{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "browser",
			"type": "pickString",
			"description": "The browser to build for",
			"options": [
				{
					"value": "chrome"
				},
				{
					"value": "firefox"
				},
				{
					"value": "tests"
				}
			]
		}
	],
	"tasks": [
		{
			"label": "watch",
			"type": "npm",
			"script": "watch-${input:browser}",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"applyTo": "allDocuments",
				"pattern": {
					"regexp": "^TS(?<errorCode>\\d+)\\s(?<file>.*?):(?<line>\\d+):(?<column>\\d+)\\s(?<message>.+)$",
					"code": 1,
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 5
				},
				"severity": "error",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "^rollup v\\d+\\.\\d+\\.\\d+$"
					},
					"endsPattern": {
						"regexp": "^\\[[:-\\s\\d]+\\] waiting for changes\\.\\.\\.$"
					}
				}
			}
		},
		{
			"label": "watch-chrome",
			"type": "npm",
			"script": "watch-chrome",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"applyTo": "allDocuments",
				"pattern": {
					"regexp": "^TS(?<errorCode>\\d+)\\s(?<file>.*?):(?<line>\\d+):(?<column>\\d+)\\s(?<message>.+)$",
					"code": 1,
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 5
				},
				"severity": "error",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "^rollup v\\d+\\.\\d+\\.\\d+$"
					},
					"endsPattern": {
						"regexp": "^\\[[:-\\s\\d]+\\] waiting for changes\\.\\.\\.$"
					}
				}
			}
		},
		{
			"label": "watch-firefox",
			"type": "npm",
			"script": "watch-firefox",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"applyTo": "allDocuments",
				"pattern": {
					"regexp": "^TS(?<errorCode>\\d+)\\s(?<file>.*?):(?<line>\\d+):(?<column>\\d+)\\s(?<message>.+)$",
					"code": 1,
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 5
				},
				"severity": "error",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "^rollup v\\d+\\.\\d+\\.\\d+$"
					},
					"endsPattern": {
						"regexp": "^\\[[:-\\s\\d]+\\] waiting for changes\\.\\.\\.$"
					}
				}
			}
		},
		{
			"label": "watch-tests",
			"type": "npm",
			"script": "watch-tests",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"applyTo": "allDocuments",
				"pattern": {
					"regexp": "^TS(?<errorCode>\\d+)\\s(?<file>.*?):(?<line>\\d+):(?<column>\\d+)\\s(?<message>.+)$",
					"code": 1,
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 5
				},
				"severity": "error",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "^rollup v\\d+\\.\\d+\\.\\d+$"
					},
					"endsPattern": {
						"regexp": "^\\[[:-\\s\\d]+\\] waiting for changes\\.\\.\\.$"
					}
				}
			}
		},
		{
			"label": "build",
			"type": "npm",
			"script": "build-${input:browser}",
			"group": "build"
		},
		{
			"label": "File Server",
			"type": "npm",
			"script": "file-server",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}