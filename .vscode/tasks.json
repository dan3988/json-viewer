{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "browser",
			"type": "pickString",
			"description": "The browser to build for",
			"options": [
				{
					"value": "chrome"
				},
				{
					"value": "firefox"
				}
			]
		}
	],	
	"tasks": [
		{
			"label": "build",
			"type": "npm",
			"script": "build (chrome)",
			"group": "build"
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch (${input:browser})",
			"group": "build"
		},
		{
			"label": "build",
			"type": "npm",
			"script": "build (${input:browser})",
			"group": "build"
		}
	]
}