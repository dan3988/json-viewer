{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"debug": true,
	"manifest_version": 3,
	"name": "Json Explorer",
	"version": "1.0.0",
	"background": {
		"service_worker": "lib/esm/background.js",
		"type": "module"
	},
	"options_page": "res/options.html",
	"web_accessible_resources": [
		{
			"matches": ["<all_urls>"],
			"resources": [
				"lib/*.js",
				"res/*",
				"node_modules/jsonpath-plus/**/*.*"
			]
		}
	],
	"host_permissions": [ "<all_urls>" ],
	"permissions": [
		"scripting",
		"storage",
		"webRequest"
	]
}