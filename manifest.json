{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"manifest_version": 2,
	"name": "Json Explorer",
	"version": "1.0.0",
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "lib/content.js" ],
			"run_at": "document_end"
		}
	],
	"options_page": "res/options.html",
	"web_accessible_resources": [
		"lib/*.js",
		"res/*",
		"node_modules/jsonpath-plus/**/*.js",
		"node_modules/vm-browserify/*.js"
	],
	"permissions": [
		"tabs",
		"storage",
		"activeTab",
		"webNavigation"
	]
}