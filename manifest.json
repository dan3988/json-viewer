{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"manifest_version": 2,
	"name": "Json Explorer",
	"version": "1.0.0",
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "lib/content.js" ],
			"run_at": "document_end"
		}
	],
	"background": {
		// "service_worker": "lib/background.js"
		// "scripts": [ "lib/background.js" ]
	},
	"web_accessible_resources": [
		"lib/html.js",
		"lib/content.js",
		"lib/json-viewer.js",
		"res/*"
	],
	"permissions": [
		"tabs",
		"activeTab",
		"webNavigation"
	]
}