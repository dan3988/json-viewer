{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"debug": true,
	"manifest_version": 3,
	"name": "JSON Viewer",
	"version": "1.0.0",
	"background": {
		"service_worker": "js/background.js",
		"type": "module"
	},
	"action": {
		"default_title": "JSON Viewer"
	},
	"icons": {
		"16": "res/icon16.png",
		"48": "res/icon48.png",
		"128": "res/icon128.png",
		"256": "res/icon256.png"
	},
	"options_page": "res/options.html",
	"web_accessible_resources": [
		{
			"matches": ["<all_urls>"],
			"resources": [
				"favicon.ico",
				"js/*",
				"res/*"
			]
		}
	],
	"host_permissions": [ "<all_urls>" ],
	"permissions": [
		"scripting",
		"storage",
		"webRequest"
	]
}