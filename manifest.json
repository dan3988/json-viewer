{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"manifest_version": 3,
	"name": "Json Explorer",
	"version": "1.0.0",
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "lib/content.js" ],
			"run_at": "document_start"
		}
	],
	"options_page": "res/options.html",
	"web_accessible_resources": [
		{
			"matches": ["<all_urls>"],
			"resources": [
				"lib/*.js",
				"res/*",
				"node_modules/jsonpath-plus/**/*.js",
				"node_modules/vm-browserify/*.js"
			]
		}
	],
	"permissions": [
		"storage"
	]
}