{
	"$schema": "http://json-schema.org/draft-07/schema",
	"required": [
		"base"
	],
	"properties": {
		"base": {
			"$ref": "https://json.schemastore.org/chrome-manifest"
		},
		"browsers": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"$ref": "https://json.schemastore.org/chrome-manifest",
					"required": []
				}
			}
		}
	}
}