{
	"compilerOptions": {
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"target": "ESNext",
		"module": "AMD",
		"moduleResolution": "classic",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "lib",
		"stripInternal": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"html": ["/src/html"],
			"json": ["/src/json"],
			"json-path": ["/src/json-path"],
			"json-viewer": ["/src/json-viewer"]
		}
	},
	"include": [
		"src/**/*.ts"
	]
}
