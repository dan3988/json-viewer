{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "AMD",
		"moduleResolution": "classic",
		"baseUrl": ".",
		"outDir": "lib/amd",
		"paths": {
			"vm": ["/src/amd/vm"],
			"html": ["/src/amd/html"],
			"json": ["/src/amd/json"],
			"json-path": ["/src/amd/json-path"],
			"json-viewer": ["/src/amd/json-viewer"]
		}
	},
	"include": [
		"src/index.d.ts",
		"src/amd/**/*.ts"
	]
}